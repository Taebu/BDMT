<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp">


        <TextView
            android:id="@+id/row_group_shopadmin_num"
            android:text="1."
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/row_group_shopadmin_num"
            android:text="YYYY/MM/DD"
            android:layout_marginRight="16dp"
            android:id="@+id/row_group_shopadmin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/row_group_shopadmin_date"
            android:text="치킨 외 1건"
            android:id="@+id/row_group_shopadmin_simplemenu"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/row_group_shopadmin_simplemenu"
            android:text="##,###원"
            android:id="@+id/row_group_shopadmin_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/row_group_shopadmin_switch"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_list_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>