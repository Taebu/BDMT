<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_normal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".OrderResultActivity">


    <LinearLayout
        android:id="@+id/order_linear"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/order_result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="주문 감사합니다."
            android:textColor="#4b4b4b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:src="#E8E8E8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="주문 정보"
            android:textColor="#4b4b4b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="주문 업체"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="결제 방식"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="배달 주소"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="배달 주소"
                    android:textColor="#999999"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="연락처"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요청사항"
                    android:textColor="#999999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/order_result_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:drawableRight="@drawable/icon_call"
                    android:text="캐시큐나라 치킨공주   " />

                <TextView
                    android:id="@+id/order_result_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="현장결제 / 카드" />

                <TextView
                    android:id="@+id/order_result_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="410-816 경기도 고양시 일산동구" />

                <TextView
                    android:id="@+id/order_result_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="강송로 49 404호" />

                <TextView
                    android:id="@+id/order_result_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="010-1234-1234" />

                <TextView
                    android:id="@+id/order_result_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빨리갖다주셈" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:src="#E8E8E8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="주문 내역"
            android:textColor="#4b4b4b"
            android:textSize="15sp"
            android:textStyle="bold" />
        <ListView
            android:id="@+id/order_result_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:src="#E8E8E8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="결제 금액"
                android:textColor="#4b4b4b"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_result_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingRight="16dp"
                android:text="10,000원"
                android:textColor="#E94230"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button


            android:id="@+id/btn_order_finish"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_black"
            android:text="완료"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</ScrollView>