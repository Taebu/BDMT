<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="9"
        android:id="@+id/bg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chicken"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gps_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000"
            android:orientation="vertical"
            android:weightSum="10.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/btn_gps"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/location_pin" />

                <TextView
                    android:id="@+id/location_name1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="8.0"
                    android:text="위치"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/manual_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="mOnClick"
                    android:text="수동주소"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/manual_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="mOnClick"
                    android:text="2km\n변경"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gps_layout"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_sale"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:onClick="mOnClick"
                android:src="@drawable/btn_mainsale"
                android:visibility="gone" />

            <!--<ImageView-->
            <!--android:id="@+id/main_life"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:clickable="true"-->
            <!--android:onClick="mOnClick"-->
            <!--android:src="@drawable/banner_life"-->
            <!--android:visibility="gone" />-->

            <TextView
                android:id="@+id/display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴를 돌려보세요~"
                android:textColor="#000000"
                android:textSize="20sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/admin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:visibility="gone" />

            <!--<Button-->
            <!--android:id="@+id/send"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:onClick="onClick"-->
            <!--android:text="send" />-->

            <!--<Button-->
            <!--android:id="@+id/clear"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:onClick="onClick"-->
            <!--android:text="clear" />-->

            <!--<TextView-->
            <!--android:id="@+id/point_value"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:text="0"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="30sp"-->
            <!--android:visibility="gone" />-->

        </LinearLayout>

        <kr.co.cashqc.view.CircleLayout
            android:id="@+id/main_circle_layout"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            circle:firstChildPosition="North"
            circle:isRotating="true"
            circle:rotateToCenter="true"
            circle:speed="75">

            <kr.co.cashqc.view.CircleImageView
                android:id="@+id/wmain_chicken"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:src="@drawable/icon_chicken"
                android:visibility="invisible"
                circle:name="@string/chicken" />

            <kr.co.cashqc.view.CircleImageView
                android:id="@+id/wmain_pizza"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:src="@drawable/icon_pizza"
                android:visibility="invisible"
                circle:name="@string/pizza" />

            <kr.co.cashqc.view.CircleImageView
                android:id="@+id/wmain_chinese"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:src="@drawable/icon_chinese"
                android:visibility="invisible"
                circle:name="@string/chinese" />

            <kr.co.cashqc.view.CircleImageView

                android:id="@+id/wmain_korean"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:src="@drawable/icon_korean"
                android:visibility="invisible"
                circle:name="@string/korean" />

            <kr.co.cashqc.view.CircleImageView
                android:id="@+id/wmain_dakbal"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:src="@drawable/icon_dakbal"
                android:visibility="invisible"
                circle:name="@string/dakbal" />

            <kr.co.cashqc.view.CircleImageView
                android:id="@+id/wmain_night"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:src="@drawable/icon_night"
                android:visibility="invisible"
                circle:name="@string/night" />

            <kr.co.cashqc.view.CircleImageView
                android:id="@+id/wmain_bossam"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:src="@drawable/icon_jokbal"
                android:visibility="invisible"
                circle:name="@string/bossam" />

            <kr.co.cashqc.view.CircleImageView
                android:id="@+id/wmain_japanese"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:src="@drawable/icon_japanese"
                android:visibility="invisible"
                circle:name="@string/japanese" />
        </kr.co.cashqc.view.CircleLayout>
    </RelativeLayout>

    <ImageView
        android:src="#E94230"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/main_life"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="fitXY"
        android:onClick="mOnClick"
        android:src="@drawable/banner_life" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo_new"
        android:visibility="gone" />

</LinearLayout>