<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_chicken"
    android:orientation="vertical"
    tools:context=".MainWheelMenu2">

    <LinearLayout
        android:id="@+id/gps_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="10.0">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/btn_gps"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/location_pin" />

            <TextView
                android:id="@+id/location_name1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="8.0"
                android:text="위치"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/manual_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="true"
                android:gravity="center"
                android:onClick="mOnClick"
                android:text="수동주소"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/manual_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="true"
                android:gravity="center"
                android:onClick="mOnClick"
                android:text="2km\n변경"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/explain"
        android:layout_below="@+id/gps_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴를 돌려보세요~"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/admin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent" />

        <!--<Button-->
        <!--android:id="@+id/send"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:onClick="onClick"-->
        <!--android:text="send" />-->

        <!--<Button-->
        <!--android:id="@+id/clear"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:onClick="onClick"-->
        <!--android:text="clear" />-->

        <!--<TextView-->
        <!--android:id="@+id/point_value"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:text="0"-->
        <!--android:textColor="#FFFFFF"-->
        <!--android:textSize="30sp"-->
        <!--android:visibility="gone" />-->

    </LinearLayout>

    <kr.co.cashqc.view.CircleLayout
        android:layout_below="@id/explain"
        android:id="@+id/main_circle_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="40dp"
        circle:firstChildPosition="North"
        circle:isRotating="true"
        circle:rotateToCenter="true"
        circle:speed="75">

        <kr.co.cashqc.view.CircleImageView
            android:id="@+id/wmain_chicken"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:src="@drawable/icon_chicken"
            android:visibility="invisible"
            circle:name="@string/chicken" />

        <kr.co.cashqc.view.CircleImageView
            android:id="@+id/wmain_pizza"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:src="@drawable/icon_pizza"
            android:visibility="invisible"
            circle:name="@string/pizza" />

        <kr.co.cashqc.view.CircleImageView
            android:id="@+id/wmain_chinese"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:src="@drawable/icon_chinese"
            android:visibility="invisible"
            circle:name="@string/chinese" />

        <kr.co.cashqc.view.CircleImageView

            android:id="@+id/wmain_korean"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:src="@drawable/icon_korean"
            android:visibility="invisible"
            circle:name="@string/korean" />

        <kr.co.cashqc.view.CircleImageView
            android:id="@+id/wmain_dakbal"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:src="@drawable/icon_dakbal"
            android:visibility="invisible"
            circle:name="@string/dakbal" />

        <kr.co.cashqc.view.CircleImageView
            android:id="@+id/wmain_night"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:src="@drawable/icon_night"
            android:visibility="invisible"
            circle:name="@string/night" />

        <kr.co.cashqc.view.CircleImageView
            android:id="@+id/wmain_bossam"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:src="@drawable/icon_jokbal"
            android:visibility="invisible"
            circle:name="@string/bossam" />

        <kr.co.cashqc.view.CircleImageView
            android:id="@+id/wmain_japanese"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:src="@drawable/icon_japanese"
            android:visibility="invisible"
            circle:name="@string/japanese" />


    </kr.co.cashqc.view.CircleLayout>

    <ImageView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/logo_new" />

</RelativeLayout>