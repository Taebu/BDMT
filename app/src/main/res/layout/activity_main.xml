<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/gps_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="10.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/btn_gps"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gps" />

            <TextView
                android:id="@+id/location_name1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="8.0"
                android:text="위치"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/manual_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="true"
                android:gravity="center"
                android:onClick="mOnClick"
                android:text="수동주소"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/manual_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="true"
                android:gravity="center"
                android:onClick="mOnClick"
                android:text="2km\n변경"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_chicken"
                    android:layout_width="@dimen/mainimg_size"
                    android:layout_height="@dimen/mainimg_size"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:onClick="mainOnClick"
                    android:src="@drawable/btn_chicken_off" />

                <ImageView
                    android:id="@+id/main_pizza"
                    android:layout_width="@dimen/mainimg_size"
                    android:layout_height="@dimen/mainimg_size"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:onClick="mainOnClick"
                    android:src="@drawable/btn_pizza_off" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/main_chinese"
                    android:layout_width="@dimen/mainimg_size"
                    android:layout_height="@dimen/mainimg_size"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:onClick="mainOnClick"
                    android:src="@drawable/btn_chinese_off" />

                <ImageView
                    android:id="@+id/main_korean"
                    android:layout_width="@dimen/mainimg_size"
                    android:layout_height="@dimen/mainimg_size"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:onClick="mainOnClick"
                    android:src="@drawable/btn_korean_off" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_flour"
                    android:layout_width="@dimen/mainimg_size"
                    android:layout_height="@dimen/mainimg_size"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:onClick="mainOnClick"
                    android:src="@drawable/btn_flour_off" />


                <ImageView
                    android:id="@+id/main_night"
                    android:layout_width="@dimen/mainimg_size"
                    android:layout_height="@dimen/mainimg_size"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:onClick="mainOnClick"
                    android:src="@drawable/btn_night_off" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_jokbal"
                    android:layout_width="@dimen/mainimg_size"
                    android:layout_height="@dimen/mainimg_size"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:onClick="mainOnClick"
                    android:src="@drawable/btn_jokbal_off" />


                <ImageView
                    android:id="@+id/main_japanese"
                    android:layout_width="@dimen/mainimg_size"
                    android:layout_height="@dimen/mainimg_size"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:onClick="mainOnClick"
                    android:src="@drawable/btn_japanese_off" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ad_bt" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/admin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:visibility="gone" />
</LinearLayout>