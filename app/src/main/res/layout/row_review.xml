<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/row_review_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/row_review_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_review_star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />
    </LinearLayout>


    <TextView
        android:id="@+id/row_review_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_review_stars"
        android:text="010****1234"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/row_review_insdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_review_phone"
        android:text="YYYY-MM-DD HH:MM:SS"
        android:textColor="#9f9f9f"
        android:textSize="9sp" />

    <TextView
        android:maxLength="40"
        android:id="@+id/row_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:layout_below="@id/row_review_insdate"
        android:text="치킨 맛잇네요~"
        android:textSize="11sp" />

    <Button
        android:id="@+id/row_review_modify"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/row_review_remove"
        android:background="@drawable/btn_black"
        android:clickable="true"
        android:text="수정"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:visibility="gone" />

    <Button
        android:layout_marginLeft="4dp"
        android:id="@+id/row_review_remove"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_black"
        android:clickable="true"
        android:text="삭제"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:visibility="gone" />

</RelativeLayout>
