<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <TextView
        android:id="@+id/row_review_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/row_review_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_review_star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />
    </LinearLayout>

    <TextView
        android:id="@+id/row_review_insdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/row_review_stars" />

    <TextView
        android:id="@+id/row_review_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/row_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_review_nick" />

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/row_review_modify"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_black"
            android:clickable="true"
            android:text="수정"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <Button
            android:id="@+id/row_review_remove"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_black"
            android:clickable="true"
            android:text="삭제"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

    </LinearLayout>


</RelativeLayout>
