<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/row_review_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_review_star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />

        <ImageView
            android:id="@+id/row_review_star5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/custom_ratingbar_empty" />
    </LinearLayout>

    <TextView
        android:id="@+id/row_review_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_below="@+id/row_review_nick"
        android:id="@+id/row_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
